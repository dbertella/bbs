---
import { app } from "../firebase/server";
import { getAuth } from "firebase-admin/auth";
import Layout from "../layouts/Layout.astro";
import Calendar from "../components/Calendar";

const auth = getAuth(app);

/* Check current session */
if (!Astro.cookies.has("__session")) {
    return Astro.redirect("/signin");
}
const sessionCookie = Astro?.cookies?.get("__session")?.value ?? "";
const decodedCookie = await auth.verifySessionCookie(sessionCookie);
const user = await auth.getUser(decodedCookie.uid);

if (!user) {
    return Astro.redirect("/signin");
}
---

<Layout title="dashboard">
    <div class="bg-gray-100 flex flex-col items-center py-8">
        <div class="flex flex-col gap-8">
            <!-- Dashboard Header -->
            <div class="w-full max-w-4xl">
                <div
                    class="bg-white rounded-xl shadow-md p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between"
                >
                    <div>
                        <h1 class="text-2xl font-bold">
                            Welcome, <span class="text-blue-600"
                                >{user.displayName}</span
                            >
                        </h1>
                        <p class="text-gray-700">
                            Hereâ€™s your dashboard overview.
                        </p>
                    </div>
                    <form action="/api/auth/signout" class="mt-4 sm:mt-0">
                        <button
                            type="submit"
                            class="bg-blue-600 text-white py-2 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                        >
                            Sign out
                        </button>
                    </form>
                </div>
            </div>

            <!-- Dashboard Widgets -->
            <div class="w-full max-w-4xl grid gap-8 grid-cols-1">
                <!-- Calendar Widget 1 -->
                <div class="bg-white rounded-xl shadow-md p-6">
                    <Calendar client:load />
                </div>
            </div>

            <div class="w-full max-w-4xl grid gap-8 grid-cols-1 md:grid-cols-2">
                <!-- Calendar Widget 1 -->

                <div
                    class="bg-white rounded-xl shadow-md p-6 w-full max-w-md mx-auto"
                >
                    <h2 class="text-lg font-bold mb-4">Add Booking</h2>
                    <form class="space-y-4">
                        <div>
                            <label
                                for="booking-type"
                                class="block text-sm font-medium text-gray-700 mb-1"
                                >Where to</label
                            >
                            <select
                                id="booking-type"
                                name="booking-type"
                                required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white"
                            >
                                <option value="SERRA">La serra</option>
                                <option value="SOLARO">Solaro</option>
                            </select>
                        </div>
                        <div class="flex gap-2">
                            <div class="flex-1">
                                <label
                                    for="start-date"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                    >Start Date</label
                                >
                                <input
                                    id="start-date"
                                    name="start-date"
                                    type="date"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                />
                            </div>
                            <div class="flex-1">
                                <label
                                    for="end-date"
                                    class="block text-sm font-medium text-gray-700 mb-1"
                                    >End Date</label
                                >
                                <input
                                    id="end-date"
                                    name="end-date"
                                    type="date"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                                />
                            </div>
                        </div>
                        <button
                            type="submit"
                            class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                        >
                            Add Booking
                        </button>
                    </form>
                </div>

                <!-- Calendar Widget 2 -->
                <div class="bg-white rounded-xl shadow-md p-6">
                    <h2 class="text-lg font-semibold mb-4">
                        Upcoming Bookings
                    </h2>
                    <ul class="space-y-3 text-left">
                        <li>
                            <div class="flex items-center gap-2">
                                <span
                                    class="inline-block w-2 h-2 rounded-full bg-blue-500"
                                ></span>
                                <span class="font-medium">May 28:</span>
                                <span>Team Meeting</span>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center gap-2">
                                <span
                                    class="inline-block w-2 h-2 rounded-full bg-green-500"
                                ></span>
                                <span class="font-medium">June 2:</span>
                                <span>Project Deadline</span>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center gap-2">
                                <span
                                    class="inline-block w-2 h-2 rounded-full bg-yellow-500"
                                ></span>
                                <span class="font-medium">June 5:</span>
                                <span>Doctor Appointment</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</Layout>
